<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="624dp"
            android:layout_margin="20dp"
            android:background="@color/white"
            app:cardCornerRadius="18dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textSize="30dp"
                android:fontFamily="@font/lineseedkr_bd"
                android:textColor="@color/black"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="20dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="10dp"
                android:fontFamily="@font/lineseedkr_bd"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="100dp">
            </TextView>
            <EditText
                android:id="@+id/Sign_up_name"
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/round_edittext"
                android:textSize="20dp">
            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:fontFamily="@font/lineseedkr_bd"
                android:textSize="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="160dp">
            </TextView>
            <EditText
                android:id="@+id/Sign_up_number"
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="180dp"
                android:background="@drawable/round_edittext"
                android:textSize="20dp">
            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:textSize="10dp"
                android:fontFamily="@font/lineseedkr_bd"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="220dp">
            </TextView>
            <EditText
                android:id="@+id/Sign_up_ID"
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="240dp"
                android:background="@drawable/round_edittext"
                android:textSize="20dp">
            </EditText>

            <Button
                android:id="@+id/login"
                android:layout_width="48dp"
                android:layout_height="18dp"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="270dp"
                android:background="@drawable/round_button"
                android:text="중복확인"
                android:fontFamily="@font/lineseedkr_bd"
                android:textColor="@color/white"
                android:textSize="10dp"></Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textSize="10dp"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/lineseedkr_bd"
                android:layout_marginTop="300dp">
            </TextView>
            <EditText
                android:id="@+id/Sign_up_PWD"
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="320dp"
                android:background="@drawable/round_edittext"
                android:textSize="20dp">
            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 재입력"
                android:textSize="10dp"
                android:fontFamily="@font/lineseedkr_bd"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="360dp">
            </TextView>
            <EditText
                android:id="@+id/Sign_up_PWD_check"
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="380dp"
                android:background="@drawable/round_edittext"
                android:textSize="20dp">
            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textSize="10dp"
                android:fontFamily="@font/lineseedkr_bd"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="420dp">
            </TextView>
            <EditText
                android:id="@+id/Sign_up_sex"
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="440dp"
                android:background="@drawable/round_edittext"
                android:textSize="20dp"></EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="포지션"
                android:textSize="10dp"
                android:fontFamily="@font/lineseedkr_bd"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="420dp">
            </TextView>

            <EditText
                android:id="@+id/Sign_up_position"
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="440dp"
                android:background="@drawable/round_edittext"
                android:textSize="20dp"></EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경력"
                android:textSize="10dp"
                android:fontFamily="@font/lineseedkr_bd"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="420dp">
            </TextView>
            <EditText
                android:id="@+id/Sign_up_career"
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="440dp"
                android:background="@drawable/round_edittext"
                android:textSize="20dp"></EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주소 입력"
                android:textSize="10dp"
                android:fontFamily="@font/lineseedkr_bd"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="480dp">
            </TextView>
            <EditText
                android:id="@+id/Sign_up_Address"
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="500dp"
                android:background="@drawable/round_edittext"
                android:textSize="20dp">
            </EditText>

            <Button
                android:id="@+id/sign_up_complete"
                android:layout_width="76dp"
                android:layout_height="34dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="540dp"
                android:background="@drawable/round_button"
                android:text="회원 가입 완료"
                android:fontFamily="@font/lineseedkr_bd"
                android:textColor="@color/white"
                android:textSize="12dp"></Button>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>